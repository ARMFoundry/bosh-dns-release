set -eu

mkdir -p "${BOSH_INSTALL_TARGET}/bin"

export GOROOT="/var/vcap/packages/golang"
export GOPATH="${BOSH_COMPILE_TARGET}/.gopath"
export PATH="${GOROOT}/bin:${PATH}"

mkdir -p "${GOPATH}/src/github.com/cloudfoundry/dns-release/src"
mv * "${GOPATH}/src/github.com/cloudfoundry/dns-release/src"

go install "github.com/cloudfoundry/dns-release/src/dns"
go install "github.com/cloudfoundry/dns-release/src/dns/nameserverconfig"
go install "github.com/cloudfoundry/dns-release/src/healthcheck"

mv "${GOPATH}/bin/"* "${BOSH_INSTALL_TARGET}/bin"
