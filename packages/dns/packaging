set -e

mkdir -p ${BOSH_INSTALL_TARGET}

export GOROOT="$(readlink -nf /var/vcap/packages/golang)"
export GOPATH="${BOSH_INSTALL_TARGET}"
export PATH="${GOROOT}/bin:${PATH}"

mkdir -p "${BOSH_INSTALL_TARGET}/src/github.com/cloudfoundry/dns-release/src"
cp -a * "${BOSH_INSTALL_TARGET}/src/github.com/cloudfoundry/dns-release/src"

go install "github.com/cloudfoundry/dns-release/src/dns"
go install "github.com/cloudfoundry/dns-release/src/dns/nameserverconfig"
