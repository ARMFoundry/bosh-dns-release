. ./exiter.ps1

$ErrorActionPreference = "Stop";
trap { $host.SetShouldExit(1) }

$BOSH_INSTALL_TARGET = Resolve-Path "${env:BOSH_INSTALL_TARGET}"

New-Item -ItemType "directory" -Force "${BOSH_INSTALL_TARGET}\"
robocopy /E acceptance_tests "${BOSH_INSTALL_TARGET}\src\acceptance_tests"
if ($LASTEXITCODE -ge 8) {
    Write-Error "robocopy /E . ${BOSH_INSTALL_TARGET}\src\acceptance_tests"
}

robocopy /E healthcheck "${BOSH_INSTALL_TARGET}\src\healthcheck"
if ($LASTEXITCODE -ge 8) {
    Write-Error "robocopy /E . ${BOSH_INSTALL_TARGET}\src\healthcheck"
}

robocopy /E vendor "${BOSH_INSTALL_TARGET}\src\vendor"
if ($LASTEXITCODE -ge 8) {
    Write-Error "robocopy /E . ${BOSH_INSTALL_TARGET}\src\vendor"
}

Exit 0
