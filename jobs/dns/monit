check process dns
  with pidfile /var/vcap/sys/run/dns/dns.pid
  start program "/var/vcap/jobs/dns/bin/dns_ctl start"
  stop program "/var/vcap/jobs/dns/bin/dns_ctl stop"
  group vcap
<% if p('override_nameserver') %>
check process dns-resolvconf
  with pidfile /var/vcap/sys/run/dns/dns_resolvconf.pid
  start program "/var/vcap/jobs/dns/bin/dns_resolvconf_ctl start"
  stop program "/var/vcap/jobs/dns/bin/dns_resolvconf_ctl stop"
  group vcap
<% end %>
<% if p('health.enabled') %>
check process dns-healthcheck
  with pidfile /var/vcap/sys/run/dns/dns_health.pid
  start program "/var/vcap/jobs/dns/bin/dns_health_ctl start"
  stop program "/var/vcap/jobs/dns/bin/dns_health_ctl stop"
  group vcap
<% end %>
